#!/usr/bin/env python

if __name__ == "__main__":

  from gi.repository import Gtk
  from argonautics.ui import UI
  from argonautics.directory_filler import DirectoryFiller
  from argonautics.file_manager import FileManager
  from argonautics.file_selection import FileSelection
  import os

  builder = Gtk.Builder()
  file_manager = FileManager
  file_selection = FileSelection
  ui = UI(builder, file_manager, file_selection)

  directory_filler = DirectoryFiller(os.getcwd())

  ui.setup_file_icons(directory_filler.get_store())
  ui.setup_signals()
  ui.desensitize_file_menu()

  ui.directory_window.show_all()
  Gtk.main()
